#include "config.h"
#include <Adafruit_Sensor.h>
#include <DHT.h>
#include <DHT_U.h>
#include <OneWire.h>
#include <DallasTemperature.h>

#define DATA_PIN 2
#define ONE_WIRE_BUS 15
#define TRIGGER 12
#define ECHO    14

OneWire oneWire(ONE_WIRE_BUS);
DallasTemperature sensors(&oneWire);
DeviceAddress wellThermometer = { 0x28, 0x54, 0xA6, 0xE4, 0x05, 0x0, 0x0, 0x31 };
DeviceAddress ambientThermometer = { 0x28, 0xE2, 0xC8, 0xE6, 0x05, 0x0, 0x0, 0x30 };

// create DHT22 instance
DHT_Unified dht(DATA_PIN, DHT11);

// set up the  AdafruitIO feeds
AdafruitIO_Feed *temperature = io.feed("temperature");
AdafruitIO_Feed *humidity = io.feed("humidity");
AdafruitIO_Feed *welltemp = io.feed("welltemp");
AdafruitIO_Feed *ambienttemp = io.feed("ambienttemp");
AdafruitIO_Feed *distance1 = io.feed("depth");

void setup() {
  // start serial port
  Serial.begin(115200);
  // set Dallas Temperature resolution
  sensors.begin();
  sensors.setResolution(wellThermometer, 9);
  sensors.setResolution(ambientThermometer, 9);
 
  // wait for serial monitor to open
  while(! Serial);
  // initialize dht22
  dht.begin();
  // connect to io.adafruit.com
  Serial.print("Connecting to Adafruit IO");
  io.connect();

  // wait for a connection
  while(io.status() < AIO_CONNECTED) {
    Serial.print(".");
    delay(500);
  }
  // we are connected
  Serial.println();
  Serial.println(io.statusText());

  pinMode(TRIGGER, OUTPUT);
  pinMode(ECHO, INPUT);
}

void loop() {
  // io.run(); is required for all sketches.
  // it should always be present at the top of your loop
  // function. it keeps the client connected to
  // io.adafruit.com, and processes any incoming data.
  io.run();

  sensors.requestTemperatures(); // Send the command to get temperatures

  float wtemp = (sensors.getTempF(wellThermometer));
  float atemp = (sensors.getTempF(ambientThermometer));

  Serial.print("Well Temperature : ");
  Serial.print(sensors.getTempF(wellThermometer));
  Serial.println("  Farhenheit");
  welltemp->save(wtemp);
  
  Serial.print("Ambient Temperature : ");
  Serial.print(sensors.getTempF(ambientThermometer));
  Serial.println("  Farhenheit");
  Serial.println();
  ambienttemp->save(atemp);
  
  delay(500);
  
  sensors_event_t event;
  dht.temperature().getEvent(&event);

  float celsius = event.temperature;
  float fahrenheit = (celsius * 1.8) + 32;

  Serial.print("celsius: ");
  Serial.print(celsius);
  Serial.println("C");

  Serial.print("fahrenheit: ");
  Serial.print(fahrenheit);
  Serial.println("F");

  // save fahrenheit (or celsius) to Adafruit IO
  temperature->save(fahrenheit);
  
  dht.humidity().getEvent(&event);

  Serial.print("humidity: ");
  Serial.print(event.relative_humidity);
  Serial.println("%");

  // save humidity to Adafruit IO
  humidity->save(event.relative_humidity);

  long duration, distance;
  digitalWrite(TRIGGER, LOW);  
  delayMicroseconds(2); 
  
  digitalWrite(TRIGGER, HIGH);
  delayMicroseconds(10); 
  
  digitalWrite(TRIGGER, LOW);
  duration = pulseIn(ECHO, HIGH);
  distance = (duration/2) / 29.1;
  
  Serial.print((distance)/2.54);
  Serial.println("  Inches:");
  Serial.print(30-((distance)/2.54));
  Serial.println("  Well Depth:");

  float dist = (distance);
  distance1->save(dist);

  // wait 10 seconds (10000 milliseconds == 10
  seconds)
  delay(10000);

}
